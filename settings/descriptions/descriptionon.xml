<theme>
	<formatVersion>7</formatVersion>
	
	<view name="detailed, video">
		
	<text name="md_description">
		<forceUppercase>0</forceUppercase>
		<fontSize>0.025</fontSize>
		<size>0.555 0.175</size>
		<pos>0.425 0.787</pos>
	</text>
	</view>
	
	<view name="detailed">
	<image name="md_image">
		<origin>0.5 0.5</origin>
		<pos>0.694 0.35</pos>
		<maxSize>0.3948 0.3508</maxSize>
	</image>
	</view>
	
	<view name="video">
	
	<image name="md_marquee">
		<origin>0.5 0.5</origin>
		<pos>0.694 0.68</pos>
		<maxSize>0.2948 0.2508</maxSize>
	</image>
	  	  
	<video name="md_video">
		<pos>0.694 0.358</pos>
		<maxSize>0.2948 0.4037</maxSize>
		<origin>0.5 0.5</origin>
		<delay>1.5</delay>
		<showSnapshotNoVideo>true</showSnapshotNoVideo>
		<showSnapshotDelay>true</showSnapshotDelay>
	</video>
    </view>	
  
</theme>
